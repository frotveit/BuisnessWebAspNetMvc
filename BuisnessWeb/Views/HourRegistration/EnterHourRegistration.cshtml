@model HourRegistration

<form asp-action="EnterHourRegistration" method="post" class="form-horizontal" role="form" asp-antiforgery="true">
    <h4>Fill in hours.</h4>

    <div class="form-group">
        <label asp-for="EmployeeId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="EmployeeId" class="form-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <!--label asp-for="Date" class="col-md-2 control-label"></!--label>
        <div class="col-md-5">
            <input asp-for="Date" class="datefield form-control" type="date" />
        </div-->
        @Html.LabelFor(m => m.Date)
        @Html.EditorFor(m => m.Date)
    </div>

    <div class="form-group">
        <label asp-for="Hours" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Hours" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="form-control" value="Submit hours" />
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger">

    </div>
</form>
