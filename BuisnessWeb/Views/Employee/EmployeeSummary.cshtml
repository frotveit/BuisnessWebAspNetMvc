@model Employee

<section class="panel panel-default">    
    <h2 class="panel-heading">@Model.Name</h2>
    <div class="panel-body">
        <h3>Employee number: @Model.EmployeeId</h3>
        <h3>Phone: @Model.Phone</h3>
        <h3>E-mail: @Model.Email</h3>
    </div>
    <div class="panel-footer">
        <a asp-action="Employee" asp-route-employeeId="@Model.EmployeeId" class="btn btn-link">View</a>
        <a asp-action="EditEmployee" asp-route-employeeId="@Model.EmployeeId" class="btn btn-link">Edit</a>
    </div>    
</section>
