@model EmployeeIdentificator

<form asp-action="SelectEmployee" method="post" class="form-horizontal" role="form">
    <h4>Choose employee number.</h4>

    <div class="form-group">
        <label asp-for="EmployeeId" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="EmployeeId" class="form-control" />
            <span asp-validation-for="EmployeeId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="form-control" value="Fetch employee" />
        </div>
    </div>

</form>
